= form_for @product, multipart: true  do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :size
    = f.text_field :size_type
   
   
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :brand
    = f.text_field :brand
  .field
    = f.label :trailers
    = check_box_tag 'product[trailers]', 'trailers'
  .actions
    = f.submit 'Save'


